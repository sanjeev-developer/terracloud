pipeline {
    agent any  // Use any available agent (Jenkins agent/agent label)

    tools {
        terraform 'terraform'
    }

    stages {

        stage('checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Raunak0604/terracloud']])
                // Add commands for building your project here
            }
        }

        stage('init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('plan') {
            steps {
                sh 'terraform plan'
            }
        }

        stage('apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }

        stage('manual approval') {
            steps {
                input "Enter manual approval"
                sh 'terraform destroy -auto-approve'
            }
        }

    }
}
